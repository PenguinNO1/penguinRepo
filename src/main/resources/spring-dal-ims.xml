<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">

    <!-- ims数据库 数据源配置, 使用Tomcat JDBC连接池 -->
    <bean id="imsDataSource" class="org.apache.tomcat.jdbc.pool.DataSource" destroy-method="close">
        <!-- Connection Info -->
        <property name="driverClassName" value="${oracle.jdbc.driver.ims}" />
        <property name="url" value="${oracle.jdbc.url.ims}" />
        <property name="username" value="${oracle.jdbc.user.ims}" />
        <property name="password" value="${oracle.jdbc.password.ims}" />
        <!-- Connection Pooling Info -->
        <property name="maxActive" value="${oracle.maxActive}" />
        <property name="minIdle" value="${oracle.minIdle}" />
        <property name="maxIdle" value="${oracle.maxIdle}" />
        <property name="maxWait" value="${oracle.maxWait}"/>

        <property name="defaultAutoCommit" value="false" />
        <!-- 连接超时 -->
        <property name="timeBetweenEvictionRunsMillis" value="30000" />
        <property name="minEvictableIdleTimeMillis" value="30000" />
        <!-- validation -->
        <property name="testWhileIdle" value="true" />
        <property name="testOnBorrow" value="true" />
        <property name="testOnReturn" value="false" />
        <property name="validationQuery" value="SELECT 1 FROM DUAL" />
    </bean>

    <bean id="imsSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="imsDataSource"/>
        <property name="typeAliasesPackage" value="com.nfsq.xs.channel.dal.ims.domain"/>
        <property name="plugins">
            <array>
                <ref bean="oraclePaginationInterceptor" />
            </array>
        </property>
    </bean>

    <bean id="imsTansactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="imsDataSource"/>
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.nfsq.xs.channel.dal.ims.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="imsSqlSessionFactory"/>
    </bean>

</beans>