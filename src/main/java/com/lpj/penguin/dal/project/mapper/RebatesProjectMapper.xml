<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lpj.penguin.dal.project.mapper.RebatesProjectMapper">

    <resultMap id="BaseResultMap" type="com.lpj.penguin.dal.project.domain.RebatesProjectDO" >
        <id column="project_id" property="projectId" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="execute_date" property="executeDate" jdbcType="INTEGER" />
        <result column="org_id" property="orgId" jdbcType="BIGINT" />
        <result column="type" property="type" jdbcType="TINYINT" />
        <result column="point" property="point" jdbcType="INTEGER" />
        <result column="status" property="status" jdbcType="TINYINT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="oper_id" property="operId" jdbcType="BIGINT" />
    </resultMap>

    <sql id="Base_Column_List" >
        project_id, name, execute_date, org_id, type, point, status, create_time,
        update_time, oper_id
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="projectId" parameterType="com.lpj.penguin.dal.project.domain.RebatesProjectDO">
        insert into rebates_project (name, execute_date, org_id,
          type, point, status, create_time, update_time, oper_id
        )
        values
        (#{name,jdbcType=VARCHAR}, #{executeDate,jdbcType=INTEGER}, #{orgId,jdbcType=BIGINT},
         #{type,jdbcType=TINYINT}, #{point,jdbcType=INTEGER}, #{status,jdbcType=TINYINT},
         #{createTime,jdbcType=TIMESTAMP}, #{updateTime,jdbcType=TIMESTAMP},
         #{operId,jdbcType=BIGINT}
        )
        <selectKey resultType="java.lang.Long" keyProperty="projectId">
            select LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="queryById" resultMap="BaseResultMap" parameterType="java.lang.Long" >
        select
        <include refid="Base_Column_List" />
        from rebates_project
        where project_id = #{projectId,jdbcType=BIGINT}
    </select>

    <select id="queryByExecuteDateAndOrg" resultMap="BaseResultMap" parameterType="java.util.Map" >
        select
        <include refid="Base_Column_List" />
        from rebates_project
        where execute_date = #{executeDate,jdbcType=INTEGER}
        and org_id = #{orgId,jdbcType=BIGINT}
    </select>

    <update id="updateStatus" parameterType="java.lang.Long">
        UPDATE rebates_project
         SET STATUS = CASE WHEN status=0 THEN 1 ELSE 0 END
        WHERE
         project_id = #{projectId,jdbcType=BIGINT}
    </update>

</mapper>