<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- project log file -->
    <appender name="projectAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Encoding>UTF-8</Encoding>
        <File>logs/nfsq-store-rebates.log</File>
        <encoder>
            <Pattern>%date %-5level [%file:%line] %msg%n%ex</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logs/nfsq-store-rebates.log.%d{yyyy-MM-dd}</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
    </appender>

    <!-- mybatis log file -->
    <appender name="mybatisAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Encoding>UTF-8</Encoding>
        <File>logs/nfsq-store-rebates-mybatis.log</File>
        <encoder>
            <Pattern>%date %-5level [%file:%line] %msg%n%ex</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logs/nfsq-store-rebates-mybatis.log.%d{yyyy-MM-dd}</FileNamePattern>
        </rollingPolicy>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoder的默认实现类是ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%date %-5level [%file:%line] %msg%n%ex</pattern>
        </encoder>
    </appender>

    <logger name="NF_DUBBO_LOG" additivity="false">
        <level value="INFO" />
        <appender-ref ref="projectAppender" />
    </logger>

    <logger name="org.apache.ibatis" additivity="false">
        <level value="INFO" />
        <appender-ref ref="mybatisAppender" />
    </logger>

    <root>
        <level value="INFO" />
        <appender-ref ref="projectAppender" />
        <appender-ref ref="STDOUT" />
    </root>

    <!--log4jdbc -->
    <logger name="jdbc.sqltiming" level="INFO" />
    <logger name="jdbc.resultsettable" level="WARN" />

</configuration>