<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nfsq.xs.rebates.dal.project.mapper.RebatesOrgMapper">

    <resultMap id="BaseResultMap" type="com.nfsq.xs.rebates.dal.project.domain.RebatesOrgDO" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="project_id" property="projectId" jdbcType="BIGINT" />
        <result column="org_id" property="orgId" jdbcType="BIGINT" />
        <result column="is_show" property="isShow" jdbcType="TINYINT" />
    </resultMap>

    <sql id="Base_Column_List">
        id, project_id, org_id, is_show
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.nfsq.xs.rebates.dal.project.domain.RebatesOrgDO">
        insert into rebates_org (project_id, org_id, is_show
        )
        values
        (#{projectId,jdbcType=BIGINT}, #{orgId,jdbcType=BIGINT}, #{isShow,jdbcType=TINYINT}
        )
        <selectKey resultType="java.lang.Long" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="queryByProjectId" resultMap="BaseResultMap" parameterType="java.lang.Long" >
        select
        <include refid="Base_Column_List" />
        from rebates_org
        where project_id = #{projectId,jdbcType=BIGINT}
    </select>


</mapper>